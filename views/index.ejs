<!DOCTYPE html>
<html>
  <head>
    <%- include('partials/head') %>
  </head>
  <body class="bg-slate-800 text-white">
    <header><%- include('partials/header') %></header>
    <main>
      <div class="flex-col flex gap-2 bg-slate-900 w-1/2 rounded mx-auto my-4 p-2">
        <% for(var i=0; i<messages.length; i++) { %>
          <div class="flex gap-4 bg-slate-800 rounded p-1">
              <p class="text-center"><%= messages[i].title %></p>
              <% if (status === 'member' || status === 'admin') { %>
                <p class="text-center"><%= messages[i].author.username %></p>
              <% } %>
              <p class="text-center"><%= messages[i].date.toDateString() %></p>
              <p class="text-center"><%= messages[i].message %></p>
          </div>
        <% } %>
      </div>

    </main>
    <footer><%- include('partials/footer') %></footer>
  </body>
</html>
